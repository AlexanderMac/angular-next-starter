am-navbar

am-spinner(*ngIf="isLoading")
.container.role-list(*ngIf="!isLoading")
  h2 Roles
  a.btn.btn-primary(routerLink="/roles/new") New Role
  .table-responsive
    table.table.table-striped.roles
      thead
        tr
          th.id(scope="col") #
          th(scope="col") Name
          th.actions(scope="col")
      tbody
        tr(*ngFor="let role of roles")
          td {{ role.id }}
          td {{ role.name }}
          td.actions
            button.btn.btn-info.btn-sm(
              title="View"
              type="button"
              '(click)'="roleDetails(role)"
              '[disabled]'="isSaving"
            ) View
            button.btn.btn-warning.btn-sm(
              title="Edit"
              type="button"
              '(click)'="editRole(role)"
              '[disabled]'="isSaving"
            ) Edit
            button.btn.btn-danger.btn-sm(
              title="Delete"
              type="button"
              '(click)'="deleteRole(role)"
              '[disabled]'="isSaving"
            ) Delete
        tr(*ngIf="roles.length === 0")
          td.text-center(colspan="3") No roles
